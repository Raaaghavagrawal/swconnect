rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Messages collection - allow authenticated users to read and write
    match /messages/{messageId} {
      allow read, write: if request.auth != null;
    }
    
    // User roles collection - allow users to read their own role
    match /userRoles/{userId} {
      allow read: if request.auth != null && request.auth.uid == userId;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Patients collection - allow authenticated users to read/write
    match /patients/{patientId} {
      allow read, write: if request.auth != null;
    }
    
    // Prescriptions collection - allow authenticated users to read/write
    match /prescriptions/{prescriptionId} {
      allow read, write: if request.auth != null;
    }
    
    // Health check collection - allow authenticated users to read/write
    match /healthcheck/{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}

